@model sistema_matricula.Models.Tramite
@{
    ViewBag.Title = "Listado de Tramites";
}
<div class="row">
    <div class="col-md-12">
        <h4><i class="glyphicon glyphicon-file"></i>  REGISTRAR NUEVO TRAMITE</h4>
        <br />
        @using (Html.BeginForm("AgregarTramite"))
        {
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color: #0b6d76;color: #fff">NUEVO TRAMITE</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Tramites, "Descripción del Tramite :", htmlAttributes: new { @class = "control-label col-md-3 text-right" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Tramites, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Tramites, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Costo, "Costo :", htmlAttributes: new { @class = "control-label col-md-3 text-right" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Costo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Costo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-12 text-center">

                                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-save"></i> GUARDAR</button>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-10" style="color:green">
                                @ViewBag.Message
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.ActionLink("Ir al Listado", "Listado")

        }
    </div>
</div>