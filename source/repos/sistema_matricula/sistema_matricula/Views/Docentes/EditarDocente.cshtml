@model sistema_matricula.Models.Docente

@{
    ViewBag.Title = "Editar Docente";
}


<div class="row">
    <div class="col-md-12">
        <h4><i class="glyphicon glyphicon-edit"></i>  EDITAR REGISTRO DE DOCENTE</h4>
       
        <br />
        @using (Html.BeginForm())
        {

            @Html.HiddenFor(model => model.Iddocente)
            <div class="panel panel-default">
                <div class="panel-heading bg-primary" style="background-color: #0b6d76;color: #fff"><b>EDITANDO</b> </div>
                <div class="panel-body">

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Apellidos, "Apellidos :", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nombres, "Nombres:", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <br />
                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Direccion, "Direccion:", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Celular, "Celular:", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Celular, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Celular, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="form-group"></div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <br>
                                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-save"></i> Modificar</button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-10" style="color:green">
                                @ViewBag.Message
                            </div>
                        </div>
                    </div>

                </div>
             </div>
              @Html.ActionLink("<< Ir al Listado", "Listado")

    }
    </div>
            </div>

  

