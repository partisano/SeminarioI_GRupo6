@model sistema_matricula.Models.Periodo
@{
    ViewBag.Title = "Listado de Periodos";
}
<div class="row">
    <div class="col-md-12">
        <h4><i class="glyphicon glyphicon-file"></i>  REGISTRAR NUEVO PERIODO</h4>
        <br />
        @using (Html.BeginForm("AgregarPeriodo"))
        {
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color: #0b6d76;color: #fff">NUEVO PERIODO</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nomperiodo, "Nombre de Periodo :", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Nomperiodo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nomperiodo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Finicio, "FECHA INICIO:", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Finicio, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })

                                @Html.ValidationMessageFor(model => model.Finicio, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Ffin, "FECHA FIN:", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Ffin, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })

                                @Html.ValidationMessageFor(model => model.Ffin, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-12 text-center">

                                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-save"></i> Guardar</button>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-10" style="color:green">
                                @ViewBag.Message
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.ActionLink("Ir al Listado", "Listado")

        }
    </div>
</div>